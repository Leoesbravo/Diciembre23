@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1 class="text-center">Lista de Usuarios</h1>
    <h5>Seleccione agregar para insertar un nuevo usuario</h5>
    <hr />
</div>
<div>
    <a href="@Url.Action("Form", "Usuario")" class="btn btn-success">Agregar</a>
</div>
@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Ocurrio Error!
    </div>
}
else
{
    <table class="table table-dark table-hover">
        <thead class="table-secondary">
            <tr class="text-center">
                <th>Editar</th>
                <th>Id Usuario</th>
                <th>Nombre</th>
                <th>Edad</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Usuario usuario in Model.Usuarios)
            {
                <tr>
                    <td><a href="@Url.Action("Form","Usuario", new {IdUsuario = usuario.IdUsuario} )" class="btn btn-warning">Editar</a></td>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.Nombre @usuario.ApellidoPaterno</td>
                    <td>@usuario.Edad</td>
                    <td><a href="@Url.Action("Delete","Usuario", new {IdUsuario = usuario.IdUsuario} )" class="btn btn-danger">Eliminar</a></td>
                </tr>
            }
        </tbody>
    </table>
}
