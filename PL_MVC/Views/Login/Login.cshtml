@model ML.Usuario
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<link rel="stylesheet" href="~/Content/Styles/Login.css">
<div class="wrapper">
    <div class="container">
        <h1>Welcome</h1>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
        {
                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
                <input type="password" placeholder="Password" name="password">
           
                <button type="submit" id="logintton">Login</button>
        }
        </div>

    <ul class="bg-bubbles">
